<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lhd.demolock">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission
        android:name="android.permission.DISABLE_KEYGUARD"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.lhd.activity.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.lhd.service.MyService" android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen">


        </service>
        <service android:name="com.lhd.service.ShowLock" />
        <service android:name="com.lhd.service.FloatIcon" />

        <receiver android:name="com.lhd.broadcast.BroadcastScreenOnOff">
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_ON"></action>
                <action android:name="android.intent.action.SCREEN_OFF"></action>
            </intent-filter>
        </receiver>
        <activity
            android:name="com.lhd.activity.Flag"
            android:showOnLockScreen="true">

        </activity>

    </application>

</manifest>