<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/im_bg_view_selected"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/im_next_img_right"
        android:src="@drawable/ic_navigate_before_white_36dp"
        android:id="@+id/im_next_img_left" />

    <ImageView
        android:id="@+id/im_next_img_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_navigate_next_white_36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:id="@+id/btn_set_image_backgroud"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="@color/color_white"
        android:text="Set LockScreen"
        android:background="@drawable/shape_buttom_set_image"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:text="22:30"
        style="@style/Base.TextAppearance.AppCompat.Display4"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:id="@+id/tv_time_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Ngày 15 tháng 10 năm 2014"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:id="@+id/tv_date_view"
        android:layout_below="@+id/tv_time_view"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>