<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:padding="5dp"
    android:id="@+id/frame_lb_noti"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center|left"
        android:id="@+id/im_refresh_noti_view"
        android:layout_marginLeft="2dp"
        android:text="@string/lb_text_noti"
        android:textColor="@color/color_white" />
    <ImageView
        android:layout_width="wrap_content"
        android:scaleType="center"
        android:layout_gravity="center"
        android:id="@+id/imv_clear_all_noti"
        android:src="@drawable/ic_delete_forever_white_18dp"
        android:layout_height="wrap_content" />
</LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_noti_ios"
        android:layout_width="match_parent"
        android:layout_below="@+id/frame_lb_noti"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        ></android.support.v7.widget.RecyclerView>
</RelativeLayout>