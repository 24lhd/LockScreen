<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_noti_input_pin_lock"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Enter Passcode"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_pin_input"
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:editable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:password="true"
                android:text="1234"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/a1bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="1"
                    android:textColor="@color/color_white" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/a2bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="2"
                    android:textColor="@color/color_white" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/a3bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="3"
                    android:textColor="@color/color_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/a4bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="4"
                    android:textColor="@color/color_white" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/a5bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="5"
                    android:textColor="@color/color_white" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/a6bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="6"
                    android:textColor="@color/color_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/a7bg"
                    android:onClick="onPinClick"

                    android:padding="0dp"
                    android:tag="7"
                    android:textColor="@color/color_white" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/a8bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="8"
                    android:textColor="@color/color_white" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/a9bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="9"
                    android:textColor="@color/color_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/a0bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="0"
                    android:textColor="@color/color_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Khẩn cấp"
                    android:textColor="@color/color_white" />

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:onClick="onXoaClick"
                    android:padding="5dp"
                    android:text="Delete"
                    android:textColor="@color/color_white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
