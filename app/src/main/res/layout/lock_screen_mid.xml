<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue_light"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/im_bg_lockscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/btn_unlock_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="10dp"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:text="> Swipe to unlock >"
        android:textColor="@color/color_white" />

    <TextView
        android:id="@+id/txt_time_lockscreen"
        style="@style/Base.TextAppearance.AppCompat.Display4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="22:30"
        android:textColor="@color/color_white" />

    <TextView
        android:id="@+id/txt_date_lockscreen"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_time_lockscreen"
        android:layout_centerHorizontal="true"
        android:text="Ngày 15 tháng 10 năm 2014"
        android:textColor="@color/color_white"
        android:textStyle="normal" />

</RelativeLayout>