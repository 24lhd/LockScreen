<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/im_bg_lockscreen_ls_pattern_large_no_vibrate_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/SlidingPanelno_vibrate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.takwolf.android.lock9.Lock9View
                android:id="@+id/lock_9_view_ls_pattern_large_no_vibrate_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:lock9_autoLink="false"
                app:lock9_enableVibrate="false"
                app:lock9_lineColor="@color/color_white"
                app:lock9_lineWidth="@dimen/lineWidth_btn_pattern_lock"
                app:lock9_nodeOnAnim="@anim/node_on_1"
                app:lock9_nodeOnSrc="@drawable/alp_indicator_code_lock_point_area_green_holo"
                app:lock9_nodeSrc="@drawable/alp_indicator_code_lock_point_area_green_holo"
                app:lock9_padding="@dimen/padding_btn_pattern_lock"
                app:lock9_spacing="@dimen/spacing_btn_pattern_lock"
                app:lock9_vibrateTime="30" />
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lock_9_view_ls_pattern_large_no_vibrate_layout"
                android:layout_centerInParent="true"
                android:background="@color/color_none"
                android:gravity="center"
                android:id="@+id/lock_9_view_ls_pattern_large_no_vibrate_ma_pin_2"
                android:text="@string/txt_forget_pass"
                android:textColor="@color/color_white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/im_bg_none_ls_pattern_large_no_vibrate_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1dp" />

            <TextView
                android:id="@+id/btn_unlock_screen"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/color_none"
                android:layout_marginBottom="36dp"
                android:gravity="center|bottom"
                android:text="@string/txt_view_onlock"
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/txt_time_ls_pattern_large_no_vibrate_layout"
                style="@style/Base.TextAppearance.AppCompat.Display4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_none"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="22:30"
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/txt_date_ls_pattern_large_no_vibrate_layout"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:background="@color/color_none"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_time_ls_pattern_large_no_vibrate_layout"
                android:layout_centerHorizontal="true"
                android:text="Ngày 15 tháng 10 năm 2014"
                android:textColor="@color/color_white"
                android:textStyle="normal" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/txt_date_ls_pattern_large_no_vibrate_layout"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:id="@+id/frame_lb_noti_large_no_vibrate"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:id="@+id/im_refresh_noti_view_large_no_vibrate"
                        android:layout_marginLeft="2dp"
                        android:text="@string/lb_text_noti"
                        android:textColor="@color/color_white" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:scaleType="center"
                        android:layout_gravity="center"
                        android:id="@+id/imv_clear_all_noti_large_no_vibrate"
                        android:src="@drawable/ic_delete_forever_white_24dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_noti_ios_large_no_vibrate"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/frame_lb_noti_large_no_vibrate"
                    android:layout_marginBottom="2dp"
                    android:layout_height="match_parent"
                    ></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v4.widget.SlidingPaneLayout>
</RelativeLayout>