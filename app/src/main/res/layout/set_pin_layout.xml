<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/im_bg_set_pin"
        android:scaleType="centerCrop"
        android:background="@color/blue_light"
        android:layout_height="match_parent" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/txt_noti_input_pin_set_pin_layout"
                android:text="Enter Passcode"
                android:textColor="@color/white" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:editable="false"
                android:maxLength="4"
                android:gravity="center"
                android:id="@+id/tv_pin_input_txt_noti_input_pin_set_pin_layout"
                android:inputType="numberPassword"
                android:password="true"
                android:text="1234"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/chieu_rong_buttom_pin"
                    android:layout_height="@dimen/chieu_rong_buttom_pin"
                    android:layout_margin="@dimen/margin_btn_pin"
                    android:background="@drawable/a1bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="1"
                    android:textColor="@color/color_white" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/chieu_rong_buttom_pin"
                    android:layout_height="@dimen/chieu_rong_buttom_pin"
                    android:layout_margin="@dimen/margin_btn_pin"
                    android:background="@drawable/a2bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="2"
                    android:textColor="@color/color_white" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/chieu_rong_buttom_pin"
                    android:layout_height="@dimen/chieu_rong_buttom_pin"
                    android:layout_margin="@dimen/margin_btn_pin"
                    android:background="@drawable/a3bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="3"
                    android:textColor="@color/color_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/chieu_rong_buttom_pin"
                    android:layout_height="@dimen/chieu_rong_buttom_pin"
                    android:layout_margin="@dimen/margin_btn_pin"
                    android:background="@drawable/a4bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="4"
                    android:textColor="@color/color_white" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/chieu_rong_buttom_pin"
                    android:layout_height="@dimen/chieu_rong_buttom_pin"
                    android:layout_margin="@dimen/margin_btn_pin"
                    android:background="@drawable/a5bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="5"
                    android:textColor="@color/color_white" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/chieu_rong_buttom_pin"
                    android:layout_height="@dimen/chieu_rong_buttom_pin"
                    android:layout_margin="@dimen/margin_btn_pin"
                    android:background="@drawable/a6bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="6"
                    android:textColor="@color/color_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/chieu_rong_buttom_pin"
                    android:layout_height="@dimen/chieu_rong_buttom_pin"
                    android:layout_margin="@dimen/margin_btn_pin"
                    android:background="@drawable/a7bg"
                    android:onClick="onPinClick"

                    android:padding="0dp"
                    android:tag="7"
                    android:textColor="@color/color_white" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/chieu_rong_buttom_pin"
                    android:layout_height="@dimen/chieu_rong_buttom_pin"
                    android:layout_margin="@dimen/margin_btn_pin"
                    android:background="@drawable/a8bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="8"
                    android:textColor="@color/color_white" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/chieu_rong_buttom_pin"
                    android:layout_height="@dimen/chieu_rong_buttom_pin"
                    android:layout_margin="@dimen/margin_btn_pin"
                    android:background="@drawable/a9bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="9"
                    android:textColor="@color/color_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/chieu_rong_buttom_pin"
                    android:layout_height="@dimen/chieu_rong_buttom_pin"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_btn_pin"
                    android:onClick="onRefeshClick"
                    android:scaleType="center"
                    android:src="@drawable/ic_refresh_white_36dp" />

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/chieu_rong_buttom_pin"
                    android:layout_height="@dimen/chieu_rong_buttom_pin"
                    android:layout_margin="@dimen/margin_btn_pin"
                    android:background="@drawable/a0bg"
                    android:onClick="onPinClick"
                    android:padding="0dp"
                    android:tag="0"
                    android:textColor="@color/color_white" />
                <ImageView
                    android:layout_width="@dimen/chieu_rong_buttom_pin"
                    android:scaleType="center"
                    android:layout_margin="@dimen/margin_btn_pin"
                    android:onClick="onXoaClick"
                    android:layout_height="@dimen/chieu_rong_buttom_pin"
                    android:src="@drawable/ic_backspace_white_36dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
